@model List<HealthUp.DataModel.NewProduct>
@{
    ViewData["Title"] = "NewProductList";
    <link href="~/css/admin.css" rel="stylesheet" />
}

<h1 class="titlefont mt-4">New Product List</h1>
@Html.ActionLink("Create", "NewProductCreate", "Admin", new { }, new { @class = "btn createbutton float-right btn-lg" })

<table class="table">
    <thead>
        <tr>
            <td scope="col">#</td>
            <td scope="col">Name</td>
            <td scope="col">Functions</td>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < @Model.Count; i++)
        {
            <tr>
                <td scope="row">@(i + 1)</td>
                <td scope="row">@Model[i].Name</td>
                <td scope="row">
                    @Html.ActionLink("Edit", "NewProductUpdate", "Admin", new { id = @Model[i].Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "NewProductDelete", "Admin", new { id = @Model[i].Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a type="button" class="btn btn-warning mb-5 float-right" asp-area="" asp-controller="Admin" asp-action="Index">Back</a>