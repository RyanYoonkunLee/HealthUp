@model HealthUp.DataModel.BestSeller
@{
    ViewData["Title"] = "BestSellerUpdate";
}

<h1 class="titlefont mb-5 mt-4">Best Seller Update</h1>

@using (Html.BeginForm("BestSellerUpdate", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ThumbnailImage)
        @Html.TextBoxFor(m => m.ThumbnailImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ThumbnailImage, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = "5" })
        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductId)
        @Html.TextBoxFor(m => m.ProductId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductId, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary mb-5">Submit</button>
}
<a type="button" class="btn btn-warning mb-5 float-right" asp-area="" asp-controller="Admin" asp-action="Index">Back</a>