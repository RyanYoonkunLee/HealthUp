@model HealthUp.ViewModel.ArticleViewModel
@{
    ViewData["Title"] = "ArticleCreate";
}

<h1 class="titlefont mb-5">ArticleCreate</h1>

@using (Html.BeginForm("ArticleCreate", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ThumbnailImage)
        @Html.TextBoxFor(m => m.ThumbnailImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ThumbnailImage, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BannerImage)
        @Html.TextBoxFor(m => m.BannerImage, new { @class = "form-control" })
    </div>
    <div class="form-group overflow-hidden">
        @Html.LabelFor(m => m.RelateProduct)
        <div class="form-control overflow-hidden">
            @foreach (var item in ViewBag.ProductList)
            {
                <div class="m-3 width-30 float-left">
                    <input class="form-check-input" type="checkbox" value="@item.Name" id="@item.Name" name="RelateProduct">
                    <label class="form-check-label" for="@item.Name">@item.Name</label>
                </div>
            }
        </div>
        @Html.ValidationMessageFor(m => m.RelateProduct, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = "20" })
        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary mb-5">Submit</button>
}
